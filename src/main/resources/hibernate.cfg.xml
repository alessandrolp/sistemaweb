<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="session">
        
        <!-- CONFIGURAÃ‡Ã•ES DE CONEXÃƒO COM O BD -->        
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property><!-- Defino o driver de conexÃ£o com o bd -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sistemaweb?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        
        <!-- HABILITA A EXIBIÃ‡ÃƒO DO SQL GERADO PELO HIBERNATE E FORMATA-O -->        
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        
        <!-- HABILITA A ATUALIZAÃ‡ÃƒO AUTOMÃTICA DA ESTRUTURA DE TABELAS PELO HIBERNATE -->       
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- CONFIGURAÃ‡Ã•ES DO POOL DE CONEXÃ•ES-->       
        <property name="c3p0.min_size">1</property>
        <property name="c3p0.max_size">20</property>
        <property name="c3p0.timeout">300</property>
        <property name="c3p0.max_statements">80</property>
        <property name="c3p0.idle_test_period">300</property>
        
        <!-- LISTA DE ENTIDADES -->
        <mapping class="br.com.sistema.model.entities.Cidade"/>        
        <mapping class="br.com.sistema.model.entities.Endereco"/>      
        <mapping class="br.com.sistema.model.entities.Estado"/>      
        <mapping class="br.com.sistema.model.entities.Pessoa"/>               
        <mapping class="br.com.sistema.model.entities.Sexo"/>
        <mapping class="br.com.sistema.model.entities.TipoEndereco"/>
        <mapping class="br.com.sistema.model.entities.TipoLogradouro"/>
    </session-factory>
</hibernate-configuration>